<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YoApp.Clients.Pages.SplashPage"
             Title="SplashPage">
    <AbsoluteLayout x:Name="Container" BackgroundColor="#32a3d6">
        <Image x:Name="BackDrop" 
               Source="pattern_backdrop.png" 
               Aspect="AspectFill" 
               AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
               AbsoluteLayout.LayoutFlags="All" />

        <Image x:Name="Circle" 
               Source="primitive_circle.png" 
               Opacity="0"
               AbsoluteLayout.LayoutBounds="0.5, 0.5" 
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <Image x:Name="Logo" 
               Source="splash_icon.png" 
               AbsoluteLayout.LayoutBounds="0.5, 0.5" 
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <ActivityIndicator x:Name="ActivityIndicator" 
                           AbsoluteLayout.LayoutBounds="0.5, 0.75" 
                           AbsoluteLayout.LayoutFlags="PositionProportional" 
                           IsRunning="True" />
    </AbsoluteLayout>
</ContentPage>